pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'extend_functionality', url: 'https://github.com/Abhishekmudda/jenkins-multibranch-pipeline.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    pip3 install --upgrade pip --break-system-packages
                    pip3 install -r requirements.txt --break-system-packages
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    python3 -m pytest > extended_result.log || echo "extended tests failed"
                    cat extended_result.log
                '''
            }
        }
    }

    post {
        success {
            echo '✅ All tests passed!'
        }
        failure {
            echo '❌ Tests failed. Check logs below:'
            sh 'cat result.log || echo "No result log found."'
        }
    }
}
